<h1>Index of Posts</h1>

<% if @posts.any? %>
  <ul>
    <% @posts.each do |post| %>
      <li><%= link_to post.subject, post_path(post) %></li>
    <% end %>
  </ul>
<% else %>
  <p><h3>No posts made yet. Steve must be boring.</h3></p>
<% end %>

<% if current_user.try(:admin?) %>
  <%= link_to 'Add a New Post', new_post_path %>
<% end %>
