<!DOCTYPE html>
<html>
<head>
  <title>Steve Bussert</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <div class="flash-wrapper">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", '/' %></li>
        <li><%= link_to "Categories", categories_path %></li>
        <% if user_signed_in? %>
          <li class="pull-right">
            <span>
              <% if current_user.admin? %>
                Welcome admin, <i><%= current_user.username %></i>! |
              <% else %>
                Welcome <i><%= link_to current_user.username, user_path(current_user) %></i>! |
              <% end %>

              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            </span>
          </li>
        <% else %>
          <li class="pull-right"><%= link_to "Sign In", new_user_session_path %></li>
          <li class="pull-right"><%= link_to "Signup",  new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>

    <%= yield %>
  </div>
</body>
</html>
